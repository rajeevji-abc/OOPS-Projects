class Vehicle:
    def __init__(self, name, rate):
        self.name = name
        self.rate = rate
        self.available = True

    def rent(self):
        if self.available:
            self.available = False
            print(f"{self.name} rented successfully")
        else:
            print(f"{self.name} is not available")

    def return_vehicle(self):
        self.available = True
        print(f"{self.name} returned")


class Car(Vehicle):
    pass


class Bike(Vehicle):
    pass


class RentalSystem:
    def __init__(self):
        self.vehicles = []

    def add_vehicle(self, vehicle):
        self.vehicles.append(vehicle)

    def show_vehicles(self):
        print("\nAvailable Vehicles:")
        for v in self.vehicles:
            status = "Available" if v.available else "Rented"
            print(f"{v.name} - â‚¹{v.rate}/day - {status}")

    def rent_vehicle(self, name):
        for v in self.vehicles:
            if v.name == name:
                v.rent()
                return
        print("Vehicle not found")

    def return_vehicle(self, name):
        for v in self.vehicles:
            if v.name == name:
                v.return_vehicle()
                return
        print("Vehicle not found")


# -------- Main Program --------
system = RentalSystem()

system.add_vehicle(Car("Honda City", 2000))
system.add_vehicle(Car("Swift", 1500))
system.add_vehicle(Bike("Yamaha", 800))
system.add_vehicle(Bike("Royal Enfield", 1200))

while True:
    print("\n1. View Vehicles")
    print("2. Rent Vehicle")
    print("3. Return Vehicle")
    print("4. Exit")

    choice = input("Enter choice: ")

    if choice == "1":
        system.show_vehicles()

    elif choice == "2":
        name = input("Enter vehicle name: ")
        system.rent_vehicle(name)

    elif choice == "3":
        name = input("Enter vehicle name: ")
        system.return_vehicle(name)

    elif choice == "4":
        print("Goodbye!")
        break

    else:
        print("Invalid choice")
